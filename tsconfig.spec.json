{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@base": ["./src/base"],
      "@base/*": ["./src/base/*"],
      "@data": ["./src/data"],
      "@data/*": ["./src/data/*"],
      "@domain": ["./src/domain"],
      "@domain/*": ["./src/domain/*"],
      "@presentation": ["./src/presentation"],
      "@presentation/*": ["./src/presentation/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
